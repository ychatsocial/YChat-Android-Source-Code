<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="?attr/colorFill">
	<LinearLayout
		android:paddingEnd="5dp"
		android:paddingStart="5dp"
		android:layout_marginEnd="15dp"
		android:layout_marginStart="15dp"
		android:id="@+id/tabsChat"
		android:background="@drawable/bg_tabs_top"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="45dp"
		android:layout_marginTop="5dp"
		android:layout_marginBottom="5dp"
		android:layout_gravity="center">
		<LinearLayout
			android:id="@+id/llChats"
			android:layout_width="match_parent"
			android:layout_height="37dp"
			android:layout_weight="1"
			android:gravity="center"
			android:clickable="true"
			android:focusable="true"
			android:layout_marginEnd="4dp"
			android:layout_marginTop="4dp"
			android:layout_marginBottom="0dp"
			android:layout_marginStart="4dp"
			android:background="@drawable/bg_tab_button"
			android:orientation="vertical">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="0dp"
				android:textSize="14dp"
				android:text="@string/Lbl_Tab_Chats"
				android:textColor="@color/gnt_white"
				android:id="@+id/ivChat" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/llGroups"
			android:layout_width="match_parent"
			android:layout_height="37dp"
			android:layout_weight="1"
			android:gravity="center"
			android:clickable="true"
			android:focusable="true"
			android:layout_marginEnd="4dp"
			android:layout_marginTop="4dp"
			android:layout_marginBottom="0dp"
			android:layout_marginStart="4dp"
			android:orientation="vertical">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="3dp"
				android:textSize="14dp"
				android:text="@string/Lbl_Group"
				android:textColor="@color/text_color_in_between"
				android:id="@+id/ivGroups" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/llArchive"
			android:layout_width="match_parent"
			android:layout_height="37dp"
			android:layout_weight="1"
			android:gravity="center"
			android:clickable="true"
			android:focusable="true"
			android:layout_marginEnd="4dp"
			android:layout_marginTop="4dp"
			android:layout_marginBottom="0dp"
			android:layout_marginStart="4dp"
			android:orientation="vertical">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="3dp"
				android:textSize="14dp"
				android:text="@string/Lbl_Archive"
				android:textColor="@color/text_color_in_between"
				android:id="@+id/ivArchive" />
		</LinearLayout>
	</LinearLayout>
	<androidx.viewpager2.widget.ViewPager2
		android:id="@+id/viewPagerChat"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:layout_behavior="@string/appbar_scrolling_view_behavior" />
</LinearLayout> 