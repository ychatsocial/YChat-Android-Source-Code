<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="?attr/colorFill"
	android:padding="10dp">
	<ImageView
		android:id="@+id/imageFirstUser"
		android:scaleType="centerCrop"
		android:layout_width="38dp"
		android:layout_height="38dp"
		android:layout_centerVertical="true"
		android:src="@drawable/no_profile_image_circle"
		android:layout_marginStart="5dp" />
	<TextView
		android:id="@+id/tv_Friends_connection"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:ellipsize="end"
		android:lines="1"
		android:maxWidth="220dp"
		android:drawablePadding="4dp"
		android:layout_marginStart="10dp"
		android:layout_marginTop="3dp"
		android:textSize="@dimen/msg_text_primary"
		android:text="@string/Lbl_FriendRequest"
		android:textStyle="bold"
		android:paddingEnd="10dp"
		android:layout_toEndOf="@+id/imageFirstUser"
		android:gravity="start"
		android:textAlignment="textStart" />
	<TextView
		android:id="@+id/tv_Friends"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:ellipsize="end" 
		android:lines="1"
		android:text="Aline and 136 other people"
		android:layout_toEndOf="@+id/imageFirstUser"
		android:layout_below="@+id/tv_Friends_connection"
		android:textColor="@color/text_color_in_between"
		android:textSize="12dp"
		android:layout_marginTop="2dp"
		android:layout_marginStart="10dp"
		android:paddingEnd="10dp"
		android:gravity="start"
		android:textAlignment="textStart" />
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="21dp"
		android:id="@+id/count_view"
		android:layout_marginStart="10dp"
		android:layout_marginEnd="10dp"
		android:translationY="-2dp"
		android:paddingStart="10dp"
		android:paddingEnd="10dp"
		android:textSize="12dp"
		android:gravity="center"
		android:textColor="@color/gnt_white"
		android:background="@drawable/round_button_pressed"
		android:layout_centerVertical="true"
		android:layout_alignParentEnd="true"
		android:text="137"
		android:layout_gravity="top|center"  />
</RelativeLayout>