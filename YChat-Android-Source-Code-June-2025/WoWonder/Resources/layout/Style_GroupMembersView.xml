<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:background="?attr/selectableItemBackground"
	android:layout_height="70dp"
	android:paddingTop="@dimen/padding_list_row"
	android:paddingEnd="@dimen/padding_list_row">
	<ImageView
		android:id="@+id/add_pic"
		android:scaleType="centerCrop"
		android:layout_width="44dp"
		android:layout_height="44dp"
		android:focusable="false"
		android:clickable="false"
		android:layout_centerVertical="true"
		android:padding="10dp"
		android:background="@drawable/shape_circle_white"
		android:backgroundTint="@color/accentLight"
		android:visibility="gone"
		android:tint="@color/accent"
		android:src="@drawable/icon_add_vector"
		android:layout_marginStart="5dp" />
	<ImageView
		android:id="@+id/card_pro_pic"
		android:scaleType="centerCrop"
		android:layout_width="44dp"
		android:layout_height="44dp"
		android:focusable="false"
		android:clickable="false"
		android:layout_centerVertical="true"
		android:layout_toEndOf="@+id/add_pic"
		android:src="@drawable/no_profile_image_circle"
		android:layout_marginStart="5dp" />
	<TextView
		android:id="@+id/card_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:ellipsize="end"
		android:lines="1"
		android:maxWidth="220dp"
		android:drawablePadding="4dp"
		android:layout_marginStart="10dp"
		android:textSize="@dimen/msg_text_primary"
		android:layout_marginTop="6dp"
		android:textStyle="bold"
		android:clickable="false"
		android:paddingEnd="10dp"
		android:focusable="false"
		android:layout_toEndOf="@+id/card_pro_pic"
		android:gravity="start"
		android:textAlignment="textStart" />
	<TextView
		android:id="@+id/card_dist"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:ellipsize="end"
		android:lines="1"
		android:text="@string/Lbl_DefaultAbout"
		android:layout_toEndOf="@+id/card_pro_pic"
		android:layout_below="@+id/card_name"
		android:textColor="@color/text_color_in_between"
		android:textSize="@dimen/msg_text_secondary"
		android:layout_marginStart="10dp"
		android:focusable="false"
		android:paddingEnd="10dp"
		android:clickable="false"
		android:gravity="start"
		android:textAlignment="textStart" />
	<ImageView
		android:id="@+id/more"
		android:tint="@color/accent"
		android:src="@drawable/icon_close_vector"
		android:layout_gravity="top|center"
		android:gravity="top|center" 
		android:padding="5dp"
		android:layout_centerInParent="true"
		android:layout_alignParentEnd="true"
		android:layout_marginStart="10dp"
		android:layout_marginEnd="10dp"
		android:layout_width="24dp"
		android:layout_height="24dp" /> 
</RelativeLayout> 