<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="180dp"
   android:layout_height="wrap_content"
   app:cardBackgroundColor="?attr/colorFill"
   app:cardCornerRadius="10dp"
   app:cardElevation="3dp"
   app:cardUseCompatPadding="true">
  <LinearLayout
    android:layout_width="match_parent" 
    android:layout_height="wrap_content"
    android:padding="5dp" 
    android:orientation="vertical">
	  <LinearLayout
		  android:id="@+id/menu_all"
		  android:layout_width="match_parent"
		  android:layout_height="wrap_content"
		  android:orientation="horizontal"
		  android:background="?attr/selectableItemBackground"
		  android:padding="10dp" >

		  <TextView
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:text="@string/Lbl_News" 
			  android:textSize="13sp" />

		  <View
			  android:layout_width="0dp"
			  android:layout_height="0dp"
			  android:layout_weight="1"/>

		  <ImageView 
			  android:id="@+id/menu_check_all"
			  android:layout_width="20dp"
			  android:layout_height="20dp"
			  android:visibility="visible"
			  android:tint="@color/accent"
			  android:src="@drawable/icon_check_circle_vector"/>

	  </LinearLayout>
   
	  <LinearLayout
		  android:id="@+id/menu_People_i_Follow"
		  android:layout_width="match_parent"
		  android:layout_height="wrap_content"
		  android:orientation="horizontal"
		  android:background="?attr/selectableItemBackground"
		  android:padding="10dp" >

		  <TextView
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:text="@string/Lbl_People_i_Follow" 
			  android:textSize="13sp" />

		  <View
			  android:layout_width="0dp"
			  android:layout_height="0dp"
			  android:layout_weight="1"/>

		  <ImageView 
			  android:id="@+id/menu_check_People_i_Follow"
			  android:layout_width="20dp"
			  android:layout_height="20dp"
			  android:visibility="invisible"
			  android:tint="@color/accent"
			  android:src="@drawable/icon_check_circle_vector"/>

	  </LinearLayout>

	  
	  <View
		  android:layout_width="match_parent"
		  android:layout_height="1dp"
		  android:background="?attr/colorDivider"/>

	  <LinearLayout
		  android:id="@+id/menu_text"
		  android:layout_width="match_parent"
		  android:layout_height="wrap_content"
		  android:orientation="horizontal"
		  android:background="?attr/selectableItemBackground"
		  android:padding="10dp" >

		  <TextView
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:text="@string/text" 
			  android:textSize="13sp" />

		  <View
			  android:layout_width="0dp"
			  android:layout_height="0dp"
			  android:layout_weight="1"/>

		  <ImageView 
			  android:id="@+id/menu_check_text"
			  android:layout_width="20dp"
			  android:layout_height="20dp"
			  android:visibility="invisible"
			  android:tint="@color/accent"
			  android:src="@drawable/icon_check_circle_vector"/>

	  </LinearLayout>

	  <LinearLayout
		  android:id="@+id/menu_image"
		  android:layout_width="match_parent"
		  android:layout_height="wrap_content"
		  android:orientation="horizontal"
		  android:background="?attr/selectableItemBackground"
		  android:padding="10dp" >

		  <TextView
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:text="@string/image" 
			  android:textSize="13sp" />

		  <View
			  android:layout_width="0dp"
			  android:layout_height="0dp"
			  android:layout_weight="1"/>

		  <ImageView 
			  android:id="@+id/menu_check_image"
			  android:layout_width="20dp"
			  android:layout_height="20dp"
			  android:visibility="invisible"
			  android:tint="@color/accent"
			  android:src="@drawable/icon_check_circle_vector"/>

	  </LinearLayout>

	  <LinearLayout
		  android:id="@+id/menu_video"
		  android:layout_width="match_parent"
		  android:layout_height="wrap_content"
		  android:orientation="horizontal"
		  android:background="?attr/selectableItemBackground"
		  android:padding="10dp" >

		  <TextView
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:text="@string/video" 
			  android:textSize="13sp" />

		  <View
			  android:layout_width="0dp"
			  android:layout_height="0dp"
			  android:layout_weight="1"/>

		  <ImageView 
			  android:id="@+id/menu_check_video"
			  android:layout_width="20dp"
			  android:layout_height="20dp"
			  android:visibility="invisible"
			  android:tint="@color/accent"
			  android:src="@drawable/icon_check_circle_vector"/>

	  </LinearLayout>

	  <LinearLayout
		  android:id="@+id/menu_file"
		  android:layout_width="match_parent"
		  android:layout_height="wrap_content"
		  android:orientation="horizontal"
		  android:background="?attr/selectableItemBackground"
		  android:padding="10dp" >

		  <TextView
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:text="@string/Lbl_File" 
			  android:textSize="13sp" />

		  <View
			  android:layout_width="0dp"
			  android:layout_height="0dp"
			  android:layout_weight="1"/>

		  <ImageView 
			  android:id="@+id/menu_check_file"
			  android:layout_width="20dp"
			  android:layout_height="20dp"
			  android:visibility="invisible"
			  android:tint="@color/accent"
			  android:src="@drawable/icon_check_circle_vector"/>

	  </LinearLayout>

	  <LinearLayout
		  android:id="@+id/menu_music"
		  android:layout_width="match_parent"
		  android:layout_height="wrap_content"
		  android:orientation="horizontal"
		  android:background="?attr/selectableItemBackground"
		  android:padding="10dp" >

		  <TextView
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:text="@string/Lbl_Music" 
			  android:textSize="13sp" />

		  <View
			  android:layout_width="0dp"
			  android:layout_height="0dp"
			  android:layout_weight="1"/>

		  <ImageView 
			  android:id="@+id/menu_check_music"
			  android:layout_width="20dp"
			  android:layout_height="20dp"
			  android:visibility="invisible"
			  android:tint="@color/accent"
			  android:src="@drawable/icon_check_circle_vector"/>

	  </LinearLayout>

	  <LinearLayout
		  android:id="@+id/menu_map"
		  android:layout_width="match_parent"
		  android:layout_height="wrap_content"
		  android:orientation="horizontal"
		  android:background="?attr/selectableItemBackground"
		  android:padding="10dp" >

		  <TextView
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:text="@string/Lbl_Map" 
			  android:textSize="13sp" />

		  <View
			  android:layout_width="0dp"
			  android:layout_height="0dp"
			  android:layout_weight="1"/>

		  <ImageView 
			  android:id="@+id/menu_check_map"
			  android:layout_width="20dp"
			  android:layout_height="20dp"
			  android:visibility="invisible"
			  android:tint="@color/accent"
			  android:src="@drawable/icon_check_circle_vector"/>

	  </LinearLayout>
		 
  </LinearLayout>
</androidx.cardview.widget.CardView>