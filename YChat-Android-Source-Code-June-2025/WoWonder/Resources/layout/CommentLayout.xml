<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_content"
    android:background="@drawable/rounded_corner_from_top_shape">
	<com.google.android.material.appbar.AppBarLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">
		<androidx.appcompat.widget.Toolbar
			android:id="@+id/toolbar"
			app:theme="@style/ToolbarTheme" 
			android:layout_width="match_parent"
			android:layout_height="50dp"
			app:titleTextAppearance="@style/Toolbar.TitleText"
			android:background="?attr/colorFill"> 
		</androidx.appcompat.widget.Toolbar>
	</com.google.android.material.appbar.AppBarLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:id="@+id/divider"
        android:background="?attr/colorDivider"
        android:layout_weight="0" />
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:layout_alignParentTop="false">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:id="@+id/divider2"
        android:background="?attr/colorDivider"
        android:layout_weight="0" />
    <FrameLayout
        android:id="@+id/TopFragmentHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorReact"
        android:layout_gravity="center"
        android:layout_centerVertical="false"
        android:layout_alignParentBottom="true"
        android:translationY="400dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center"
        android:layout_gravity="bottom|center"
        android:id="@+id/commentLayout"
        android:background="?attr/colorFill"
        android:orientation="horizontal">
	    <ImageView
		    android:id="@+id/emojiicon"
		    android:layout_width="25dp"
		    android:layout_height="match_parent"
		    android:src="@drawable/icon_smile_vector"
		    android:scaleType="fitCenter"
		    android:layout_gravity="center"
		    android:focusable="true"
		    android:padding="1dp"
		    android:focusableInTouchMode="true"
		    android:gravity="center"
		    android:layout_marginStart="5dp" />
	    <com.aghajari.emojiview.view.AXEmojiEditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/commenttext"
            android:background="@null"
            android:textSize="16sp"
            android:maxLines="4"
            android:imeOptions="actionSend" 
            android:paddingStart="20dp"
            android:paddingEnd="20dp" 
            android:inputType="textCapSentences|textMultiLine|textShortMessage"
            android:hint="@string/Lbl_Write_comment"
            android:textColorHint="?attr/colorReact" />
        <at.markushi.ui.CircleButton
            android:layout_width="35dp" 
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/voiceButton"
            app:cb_color="?attr/colorFill"
            app:cb_pressedRingWidth="5dip"
            android:padding="1dp"
            android:layout_gravity="center"
            android:gravity="center" 
            android:tint="?attr/colorReact"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/icon_microphone_vector"
            android:layout_weight="0" />
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/image"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="?attr/colorReact" 
            android:src="@drawable/icon_attach_vector"
            android:padding="5dp"
            android:layout_weight="0" />
	    <ImageView
		    android:layout_width="30dp"
		    android:layout_height="30dp"
		    android:layout_marginTop="5dp"
		    android:layout_marginBottom="3dp"
		    android:layout_marginEnd="10dp"
		    android:padding="3dp"
		    android:id="@+id/send" 
		    android:background="?attr/selectableItemBackgroundBorderless"
		    android:tint="?attr/colorReact" 
		    android:src="@drawable/ic_send_vector"
		    android:layout_weight="0" />
    </LinearLayout>
</LinearLayout>