<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" 
              android:orientation="vertical"
              android:layout_margin="8dp"
              android:id="@+id/mainLayout"
			  android:background="@drawable/round_gray_border">
	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="200dp">
		<ImageView
			android:id="@+id/image"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:adjustViewBounds="true"
			android:scaleType="centerCrop"
			 />
		<ImageView
			android:layout_width="36dp"
			android:layout_height="36dp"
			android:layout_margin="12dp"
			android:layout_gravity="start|top"
			android:src="@drawable/icon_post_youtube_vector" />
	</FrameLayout>
	 
	<TextView 
		android:id="@+id/video_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="When Sustainability and Finance"
		android:layout_marginTop="8dp"
		android:layout_marginHorizontal="12dp"
		android:textFontWeight="500" 
		android:textSize="16sp" />

	<TextView
		android:id="@+id/video_desc"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="When Sustainability and Finance"
		android:layout_marginTop="2dp"
		android:layout_marginBottom="8dp"
		android:layout_marginHorizontal="12dp"
		android:textFontWeight="400"
		android:textSize="14sp"
		android:textColor="?attr/colorReact"/>

</LinearLayout>