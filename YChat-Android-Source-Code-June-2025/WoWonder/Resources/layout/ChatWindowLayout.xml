<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/rootChatWindowView"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="?attr/colorFill">
	<androidx.appcompat.widget.Toolbar
		android:id="@+id/toolbar"
		android:layout_width="match_parent"
		android:layout_height="62dp"
		android:paddingBottom="4dp"
		android:paddingTop="0dp"
		app:titleMarginStart="0dp"
		android:background="@android:color/transparent"
		app:titleTextColor="@color/gnt_white"
		app:contentInsetLeft="0dp"
		app:contentInsetStart="0dp"
		app:contentInsetStartWithNavigation="0dp"
		android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">
		<RelativeLayout
			android:padding="1dp"
			android:layout_marginTop="3dp"
			android:layout_marginBottom="3dp"
			android:layout_marginStart="0dp"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			<ImageView
				android:id="@+id/BackButton"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:layout_marginStart="10dp"
				android:rotation="180"
				android:padding="3dp"
				android:tint="?attr/colorAccent"
				android:layout_centerVertical="true"
				android:layout_gravity="center_vertical"
				android:src="@drawable/icon_next_vector" />
			<de.hdodenhof.circleimageview.CircleImageView
				android:id="@+id/userProfileImage"
				android:layout_marginStart="42dp"
				android:layout_width="44dp"
				android:layout_height="44dp"
				app:civ_border_width="1dp"
				android:layout_centerVertical="true"
				app:civ_border_color="?attr/colorAccent"
				android:padding="0dp"
				android:src="@drawable/no_profile_image_circle" />
			<TextView
				android:id="@+id/Txt_Username"
				android:textStyle="bold"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="10dp"
				android:layout_marginTop="3.5dp"
				android:layout_toEndOf="@id/userProfileImage"
				android:layout_gravity="start"
				android:gravity="start"
				android:textSize="17sp" />
			<TextView
				android:id="@+id/Txt_last_time"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="10dp"
				android:layout_marginTop="0dp"
				android:layout_below="@+id/Txt_Username"
				android:layout_toEndOf="@id/userProfileImage"
				android:layout_gravity="start"
				android:gravity="start"
				android:textSize="11sp" />
			<ImageView
				android:id="@+id/IconMore"
				android:background="@drawable/custom_ripple"
				android:layout_alignParentEnd="true"
				android:layout_height="20dp"
				android:layout_width="20dp"
				android:layout_marginEnd="12dp"
				android:tint="?attr/colorAccent"
				android:rotation="90"
				android:src="@drawable/icon_more_dots_vector" 
				android:layout_gravity="center"
				android:layout_centerVertical="true" />
			<ImageView
				android:id="@+id/IconCall"
				android:background="@drawable/custom_ripple"
				android:layout_height="24dp"
				android:layout_width="24dp"
				android:layout_marginEnd="19dp"
				android:tint="?attr/colorAccent"
				android:layout_toStartOf="@+id/IconMore"
				android:src="@drawable/icon_phone_vector"
				android:layout_gravity="center"
				android:layout_centerVertical="true" />
			<ImageView
				android:id="@+id/IconvideoCall"
				android:background="@drawable/custom_ripple"
				android:layout_height="24dp"
				android:layout_toStartOf="@+id/IconCall"
				android:layout_width="24dp"
				android:layout_marginEnd="19dp"
				android:tint="?attr/colorAccent" 
				android:src="@drawable/icon_video_camera_vector"
				android:layout_gravity="center"
				android:layout_centerVertical="true" /> 
		</RelativeLayout>
	</androidx.appcompat.widget.Toolbar>
	<LinearLayout
		android:id="@+id/bodyListChatLayout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:background="#F1F1F2">
		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:layout_marginTop="0dp" >
			<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/recyler"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scrollbars="none"
				app:stackFromEnd="true" 
				android:layoutDirection="ltr"/>
			<include
				android:id="@+id/pin_message_view"
				layout="@layout/PinnedMessageViewLayout"
				android:visibility="gone" />
			<com.google.android.material.floatingactionbutton.FloatingActionButton
				style="@style/Widget.MaterialComponents.FloatingActionButton"
				android:id="@+id/fab_scroll"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="end|bottom"
				android:clickable="true"
				app:elevation="3dp"
				android:visibility="gone"
				app:pressedTranslationZ="12dp"
				app:rippleColor="@color/accent"
				app:tint="@color/gnt_white"
				android:src="@drawable/icon_expand_vector"
				android:layout_alignParentEnd="true"
				android:layout_alignParentBottom="true"
				android:layout_marginEnd="20dp"
				app:backgroundTint="@color/accent"
				app:fabSize="mini"
				android:layout_marginBottom="20dp" />
			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/Loading_LinearLayout"
				android:visibility="gone"
				android:layout_marginTop="20dp"
				android:layout_centerInParent="true"
				android:layout_centerHorizontal="true"
				android:layout_centerVertical="true"
				android:layout_gravity="center">
				<ProgressBar
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/progressBar"
					android:layout_centerInParent="true"
					android:indeterminate="true"
					android:gravity="center"
					android:layout_gravity="center"
					android:progressTint="@color/gnt_white" />
				<TextView
					android:id="@+id/Txt_Start_Loading"
					android:layout_width="wrap_content"
					android:textSize="15dp"
					android:textStyle="normal"
					android:layout_centerInParent="true"
					android:text="@string/Lbl_Loading"
					android:layout_height="wrap_content"
					android:typeface="normal"
					android:gravity="center"
					android:layout_gravity="center"
					android:layout_marginTop="10dp" />
			</LinearLayout>
		</FrameLayout>
		<LinearLayout
			android:id="@+id/BoxButtonLayout" 
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:background="?attr/colorFill">>
			<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/RecyclerSuggestions"
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:scrollbars="none"
				android:layout_marginBottom="5dp"
				android:layout_alignParentBottom="true"
				android:visibility="gone"
				android:scrollingCache="true" /> 
			<FrameLayout
				android:id="@+id/TopFragmentHolder"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_centerVertical="false"
				android:layout_alignParentBottom="true"
				android:translationY="400dp" />
			<include
				android:id="@+id/replied_message_view"
				layout="@layout/RepliedMessageViewLayout"
				android:visibility="gone" />
			<FrameLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="?attr/colorFill">
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:weightSum="11"
					android:layout_marginTop="0dp"
					android:paddingEnd="10dp"
					android:paddingStart="10dp"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/mediaButton"
						android:tag="attachment"
						android:layout_weight="0.1"
						android:background="@drawable/shape_circle_white"
						android:backgroundTint="?attr/colorAccent"
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:layout_marginStart="0dp"
						android:layout_marginBottom="3dp"
						android:layout_gravity="bottom|center"
						android:padding="10dp"
						android:tint="@color/gnt_white"
						android:src="@drawable/icon_category_vector" />
					<LinearLayout
						android:id="@+id/LayoutEditText"
						android:background="@drawable/EditTextStyleChat"
						android:backgroundTint="?attr/colorBubble"
						android:layout_weight="10"
						android:orientation="horizontal"
						android:layout_marginStart="7dp"
						android:layout_marginTop="7dp"
						android:layout_marginBottom="0dp"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content">
						<ImageView
							android:id="@+id/emojiicon"
							android:layout_width="24dp"
							android:layout_height="24dp"
							android:background="?attr/selectableItemBackgroundBorderless"
							android:clickable="true"
							android:padding="0dp"
							android:layout_gravity="bottom|center"
							android:scaleType="fitCenter"
							android:layout_marginBottom="8dp"
							android:tint="?attr/colorReact"
							android:src="@drawable/icon_smile_vector" />
						<com.aghajari.emojiview.view.AXEmojiEditText
							android:id="@+id/EmojiconEditText5"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:minHeight="40dp"  
							android:maxHeight="100dp"  
							android:layout_weight="1"
							android:textColorHint="#888888"
							android:layout_marginStart="3dp"
							android:paddingEnd="5dp"
							android:paddingStart="7dp"
							android:textSize="14dp"
							android:maxLines="4"   
							android:layout_gravity="bottom|center" 
							android:inputType="textAutoCorrect|textCapSentences|textMultiLine"
							android:background="@android:color/transparent"
							android:scrollbars="vertical"
							android:hint="@string/Lbl_Write_your_message"
							android:imeOptions="normal" 
							android:privateImeOptions="bold"/>
						<ImageView
							android:id="@+id/StickerButton"
							android:layout_width="24dp"
							android:layout_height="24dp"
							android:background="?attr/selectableItemBackgroundBorderless"
							android:clickable="true"
							android:padding="1dp"
							android:layout_marginStart="3dp"
							android:layout_marginBottom="8dp"
							android:layout_gravity="bottom|center"
							android:scaleType="fitCenter"
							android:visibility="visible"
							android:tint="?attr/colorReact"
							android:src="@drawable/icon_stickers_vector" />
						<ImageView 
							android:id="@+id/sendButton"
							android:layout_width="24dp"
							android:layout_height="24dp"
							android:background="?attr/selectableItemBackgroundBorderless"
							android:clickable="true"
							android:padding="1dp"
							android:layout_marginStart="3dp"
							android:layout_marginBottom="8dp"
							android:layout_gravity="bottom|center"
							android:scaleType="fitCenter"
							android:visibility="gone"
							android:tint="?attr/colorAccent"
							android:src="@drawable/icon_send_vector" />
						<WoWonder.Library.Anjo.XRecordView.RecordButton
							android:id="@+id/record_button"
							android:layout_width="35dp"
							android:layout_height="35dp"
							android:layout_gravity="bottom|center"
							android:tint="?attr/colorReact"
							android:layout_weight="0"
							android:layout_marginStart="3dp"
							android:layout_marginBottom="2dp"
							android:scaleType="centerInside"
							app:mic_icon="@drawable/icon_mic_vector" />
					</LinearLayout>
				</LinearLayout>
				<WoWonder.Library.Anjo.XRecordView.RecordView
					android:id="@+id/record_view"
					android:layout_width="match_parent"
					android:layout_height="50dp"
					android:layout_gravity="bottom|center"
					android:layout_marginEnd="55dp"
					android:layout_toStartOf="@+id/record_button"
					app:slide_to_cancel_arrow="@drawable/recv_ic_arrow"
					app:slide_to_cancel_arrow_color="#9E9E9E"
					app:slide_to_cancel_bounds="10dp"
					app:slide_to_cancel_margin_right="10dp"
					app:slide_to_cancel_text="@string/Lbl_SlideToCancelAudio"
					app:counter_time_color="#ff0000" />
			</FrameLayout>
			<FrameLayout
				android:id="@+id/ButtomFragmentHolder"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_centerVertical="false"
				android:layout_alignParentBottom="true"
				android:translationY="400dp" />
			<View
				android:layout_width="match_parent"
				android:layout_height="10dp"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/BlockedLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:visibility="gone"
			android:padding="10dp">

			<View
				android:layout_width="80dp"
				android:layout_height="4dp"
				android:layout_gravity="center"
				android:gravity="center"
				android:layout_marginVertical="5dp"
				android:background="?attr/colorDivider" />
			 
			<TextView
				android:layout_width="wrap_content"
				android:textSize="15dp"
				android:layout_centerInParent="true"
				android:text="@string/Lbl_TextBlockedUser_BoxChat"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:layout_gravity="center" 
				android:layout_marginVertical="10dp"/>
			 
			<androidx.appcompat.widget.AppCompatButton
				android:id="@+id/UnBlockButton"
				android:background="@drawable/round_button_pressed"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:textFontWeight="500"
				android:text="@string/Lbl_UnBlock"
				android:textColor="@color/gnt_white"
				android:textAllCaps="false"
				android:textSize="16sp"
				android:clickable="true"
				android:layout_marginEnd="30dp"
				android:layout_marginStart="30dp" />
			 
		</LinearLayout>

	</LinearLayout>
</LinearLayout>