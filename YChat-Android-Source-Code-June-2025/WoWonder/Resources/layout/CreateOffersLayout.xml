<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
                app:theme="@style/ToolbarTheme"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            android:background="?attr/colorFill">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Lbl_Create"
                android:layout_gravity="end"
                android:textSize="15sp"
                android:textStyle="bold" 
                android:padding="15dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/toolbar_title" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:scrollbars="none"
            android:scrollingCache="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:id="@+id/lyt_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp">
                <RelativeLayout
                android:id="@+id/LayoutImage"
						android:layout_width="match_parent"
						android:layout_height="200dp"
						android:layout_marginTop="11dp"
						android:background="@drawable/shape_bg_round_dotted"
						android:layout_marginStart="16dp"
						android:layout_marginEnd="16dp">
						<ImageView
							android:id="@+id/Image"
							android:scaleType="centerCrop"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:focusable="false"
							android:clickable="false"
							android:gravity="center" />
						<ImageView
							android:id="@+id/btn_selectimage"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_centerInParent="true"
							android:src="@drawable/icon_select_image"/>
						<TextView
                            android:id="@+id/addImg"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_centerHorizontal="true"
							android:layout_below="@id/btn_selectimage"
							android:layout_marginTop="25dp"
							android:textSize="14sp"
							android:text="@string/Lbl_ChooseImage"
							android:textColor="@color/accent"/>
					</RelativeLayout> 
                <!--discount type Section -->
                <LinearLayout
                    android:id="@+id/LayoutDiscountType"
                    android:paddingTop="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/IconDiscountType"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="#"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:layout_marginStart="5dp" />
                    <EditText
                        android:id="@+id/DiscountTypeEditText"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="@string/Lbl_DiscountType"
                        android:textSize="15sp"
                        android:gravity="start|center"
                        android:background="@drawable/EditTextStyleOne"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="3dp" />
                </LinearLayout> 
                <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/Recyler"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:nestedScrollingEnabled="true"
                  android:scrollbars="vertical"
                  android:paddingTop="5dp"
                  android:visibility="gone"
                  android:layout_marginTop="5dp"
                  android:layout_marginEnd="5dp" /> 
                <!--discount items Section-->
                <LinearLayout
                    android:id="@+id/LayoutDiscountItems"
                    android:paddingTop="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/IconDiscountItems"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="#"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:layout_marginStart="5dp" />
                    <EditText
                        android:id="@+id/DiscountItemsEditText"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="@string/Lbl_DiscountItems"
                        android:textSize="15sp"
                        android:gravity="start|center"
                        android:background="@drawable/EditTextStyleOne"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="3dp" />
                </LinearLayout>
                <!--currency Section-->
                <LinearLayout
                  android:id="@+id/LayoutCurrency"
                  android:paddingTop="5dp"
                  android:layout_marginTop="5dp"
                  android:layout_marginEnd="5dp"
                  android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">
                  <TextView
                    android:id="@+id/IconCurrency"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="#"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:layout_marginStart="5dp" />
                  <EditText
                    android:id="@+id/CurrencyEditText"
                    style="@style/EditTextNormalStyle"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/Lbl_Currency"
                    android:textSize="15sp"
                    android:gravity="start|center"
                    android:background="@drawable/EditTextStyleOne"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="3dp" />
                </LinearLayout> 
                <!--Description Section-->
                <LinearLayout
                  android:id="@+id/LayoutDescription"
                  android:paddingTop="5dp"
                  android:layout_marginTop="5dp"
                  android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginEnd="5dp"
                  android:layout_height="wrap_content">
                  <TextView
                    android:id="@+id/IconDescription"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="#"
                    android:gravity="top|center"
                    android:layout_gravity="start"
                    android:textSize="20sp"
                    android:layout_marginStart="5dp" />
                  <EditText
                    android:id="@+id/DescriptionEditText"
                    style="@style/EditTextNormalStyle"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/EditTextStyleOne"
                    android:hint="@string/Lbl_Description"
                    android:textSize="15sp"
                    android:gravity="start"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="3dp" />
                </LinearLayout> 
                <!--End Date Section-->
                <LinearLayout
                    android:id="@+id/LayoutDate"
                    android:paddingTop="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/IconDate"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="#"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:layout_marginStart="5dp" />
                    <EditText
                        android:id="@+id/DateEditText"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="@string/Lbl_End_Date"
                        android:textSize="15sp"
                        android:gravity="start|center"
                        android:background="@drawable/EditTextStyleOne"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="3dp" />
                </LinearLayout>
                <!--Time Section-->
                <LinearLayout
                  android:id="@+id/LayoutTime"
                  android:paddingTop="5dp"
                  android:layout_marginTop="5dp"
                  android:layout_marginEnd="5dp"
                  android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">
                  <TextView
                    android:id="@+id/IconTime"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="#"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:layout_marginStart="5dp" />
                  <EditText
                    android:id="@+id/TimeEditText"
                    style="@style/EditTextNormalStyle"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/Lbl_Time"
                    android:textSize="15sp"
                    android:gravity="start|center"
                    android:background="@drawable/EditTextStyleOne"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="3dp" />
                </LinearLayout> 

                <com.google.android.gms.ads.admanager.AdManagerAdView
                    android:id="@+id/multiple_ad_sizes_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    app:adSize="MEDIUM_RECTANGLE,120x20,250x250,320x100,SMART_BANNER"
                    app:adUnitId="@string/banner_multiple_ad_sizes_id" />
                    
                <View
                    android:layout_height="?android:attr/actionBarSize"
                    android:layout_width="match_parent" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</LinearLayout>