<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/parent"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="?attr/colorFill"
	android:orientation="vertical">
	<com.google.android.material.appbar.AppBarLayout
		android:id="@+id/appbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_scrollFlags="scroll|enterAlways"
		android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
		app:elevation="0dp">
		<androidx.appcompat.widget.Toolbar
			android:id="@+id/toolbar"
			app:theme="@style/ToolbarTheme"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:layout_scrollFlags="scroll|enterAlways"
			android:background="?attr/colorFill">
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="?android:attr/actionBarSize"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<ImageView
						android:layout_width="120dp"
						android:layout_height="20dp"
						android:src="@drawable/logo"
						android:tint="@color/primary"/>
					<View
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"/>
					<ImageView
						android:id="@+id/rlSearch"
						android:layout_width="24dp"
						android:layout_height="24dp"
						android:layout_marginEnd="20dp"
						android:src="@drawable/icon_search_vector"
						android:tint="?attr/colorHint"
						/> 
					<ImageView
						android:id="@+id/rl_message"
						android:layout_width="24dp"
						android:layout_height="24dp"
						android:layout_marginEnd="20dp"
						android:src="@drawable/icon_messenger_vector"  />
					<ImageView 
						android:id="@+id/rlReels" 
						android:layout_width="24dp"
						android:layout_height="24dp"
						android:layout_marginEnd="20dp"
						android:visibility="gone"
						android:src="@drawable/icon_video_reels_vector"
						android:tint="?attr/colorHint" />
					<ImageView
						android:id="@+id/rlAdd"
						android:layout_width="24dp"
						android:layout_height="24dp"
						android:layout_marginEnd="10dp"
						android:src="@drawable/icon_add_round_vector"
						android:tint="?attr/colorHint" />
				</LinearLayout>
				<com.google.android.material.tabs.TabLayout
					android:id="@+id/tab_home"
					android:layout_width="match_parent"
					android:layout_height="36dp"
					android:layout_gravity="start"
					android:layout_marginStart="0dp"
					android:gravity="start"
					android:clipToPadding="false"
					android:layout_marginTop="5dp"
					android:layout_marginBottom="5dp" 
					android:background="?attr/colorFill"
					app:layout_scrollFlags="scroll|enterAlways"
					app:tabBackground="@drawable/tab_indicator_un"
					app:tabGravity="fill"
					app:tabIndicator="@drawable/tab_indicator_se"
					app:tabIndicatorColor="?attr/colorHint"
					app:tabIndicatorFullWidth="true"
					app:tabIndicatorHeight="36dp"
					app:tabMode="scrollable"
					app:tabPaddingStart="20dp"
					app:tabPaddingEnd="20dp"
					app:tabRippleColor="?attr/colorFill"
					app:tabSelectedTextColor="?attr/colorFill"
					app:tabTextAppearance="@style/TabFontAppearance"
					app:tabTextColor="?attr/colorHint">
					<com.google.android.material.tabs.TabItem
						android:id="@+id/tab_news"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/Lbl_News"/>
					<com.google.android.material.tabs.TabItem
						android:id="@+id/tab_popularPosts"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/Lbl_Popular_Posts"/>
					<com.google.android.material.tabs.TabItem
						android:id="@+id/tab_mostLiked"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/Lbl_MostLiked"/>
				</com.google.android.material.tabs.TabLayout>
			</LinearLayout> 
		</androidx.appcompat.widget.Toolbar>
	</com.google.android.material.appbar.AppBarLayout>
	<androidx.viewpager2.widget.ViewPager2
		android:id="@+id/vp_horizontal_ntb"
		app:layout_behavior="@string/appbar_scrolling_view_behavior"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>
	<LinearLayout
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:clickable="true"
		android:id="@+id/root"
		android:gravity="bottom"
		android:layout_gravity="bottom"
		android:layout_height="wrap_content">
		<include
			android:id="@+id/bottomnavigationtab"
			layout="@layout/bottomnavigationtab"
		/> 
		<include
			android:id="@+id/viewStubFullScreenPlayer"
			layout="@layout/stubViewAudioPlayer"
		/>  
	</LinearLayout>
	<com.google.android.material.floatingactionbutton.FloatingActionButton
		style="@style/Widget.MaterialComponents.FloatingActionButton"
		android:id="@+id/floatingActionButtonView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="end|bottom"
		android:clickable="true"
		android:visibility="gone"
		app:elevation="6dp"
		app:pressedTranslationZ="12dp"
		app:rippleColor="@android:color/transparent"
		app:tint="@color/gnt_white"
		android:src="@drawable/icon_add_vector"
		android:layout_alignParentEnd="true"
		android:layout_alignParentBottom="true"
		android:layout_marginEnd="20dp"
		app:backgroundTint="@color/accent"
		android:layout_marginBottom="75dp" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>