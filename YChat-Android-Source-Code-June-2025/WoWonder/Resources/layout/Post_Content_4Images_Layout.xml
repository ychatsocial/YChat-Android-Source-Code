<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/contentPost"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="10"
        android:layout_height="360dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.98"
            android:weightSum="10">
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_alignParentEnd="true"
                android:layout_weight="4.98"
                android:minHeight="170dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:maxHeight="350dp"
                android:src="@drawable/imageplacholder"
                />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.02"/>
            <ImageView
                android:id="@+id/image2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4.98"
                android:minHeight="170dp"
                android:adjustViewBounds="true"
                android:maxHeight="350dp"
                android:scaleType="centerCrop"
                android:src="@drawable/imageplacholder"
                />
        </LinearLayout>
        <Space
            android:layout_width="0dp"
            android:layout_weight="0.02"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.98"
            android:weightSum="10">
            <ImageView
                android:id="@+id/image3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_alignParentEnd="true"
                android:layout_weight="4.98"
                android:minHeight="170dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:maxHeight="350dp"
                android:src="@drawable/imageplacholder"
               />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.02"/>
            <ImageView
                android:id="@+id/image4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4.98"
                android:minHeight="170dp"
                android:adjustViewBounds="true"
                android:maxHeight="350dp"
                android:scaleType="centerCrop"
                android:src="@drawable/imageplacholder"
               />
        </LinearLayout>
    </LinearLayout>
