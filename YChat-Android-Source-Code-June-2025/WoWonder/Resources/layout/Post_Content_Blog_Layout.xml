<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:layout_margin="8dp"
	android:id="@+id/mainLayout"
	android:background="@drawable/round_gray_border">
	<ImageView
		android:id="@+id/image"
		android:layout_width="match_parent"
		android:layout_height="200dp"
		android:adjustViewBounds="true"
		android:scaleType="centerCrop"
		 />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/black_half_transparent"
		android:orientation="vertical"
		android:gravity="center"
		android:padding="8dp">

		<TextView
			android:id="@+id/postblogText"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/gnt_white"
			android:gravity="center"
			android:textStyle="bold"
			android:maxLines="2"
			android:textSize="18sp"/>

		<TextView
			android:id="@+id/catText"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textColor="@color/gnt_white"
			android:layout_marginTop="3dp"
			android:maxLines="1"
			android:textSize="13sp"/>

		<TextView
			android:id="@+id/readText"
			android:layout_width="wrap_content"
			android:layout_height="30dp"
			android:textColor="@color/gnt_black"
			android:textSize="13dp"
			android:ellipsize="none"
			android:paddingEnd="20dp"
			android:paddingStart="20dp"
			android:text="@string/Lbl_Read"
			android:gravity="center"
			android:layout_marginTop="12dp"
			android:drawableStart="@drawable/icon_blog_read_vector"
			android:drawableTint="@color/gnt_black"
			android:background="@drawable/round_button_gray"
			android:backgroundTint="@color/gnt_white" />

	</LinearLayout>
</FrameLayout> 