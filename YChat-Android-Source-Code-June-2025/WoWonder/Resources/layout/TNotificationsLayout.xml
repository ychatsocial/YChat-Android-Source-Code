<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/swipeRefreshLayout"
	android:layout_width="match_parent"
	android:layout_alignParentTop="false"
	android:layout_height="wrap_content"
	android:paddingStart="5dp"
	android:paddingEnd="5dp"
	android:paddingTop="5dp"
	android:paddingBottom="50dp"
	android:layout_centerVertical="true"
	android:background="?attr/colorFill">
	<androidx.core.widget.NestedScrollView
		android:id="@+id/ScrollView" 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_behavior="@string/appbar_scrolling_view_behavior">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="top"
			android:orientation="vertical"> 
			<ViewStub
				android:id="@+id/viewStubAnnouncement"
				android:inflatedId="@+id/stubViewAnnouncement"
				android:layout_width="match_parent"
				android:layout_height="150dp"
				android:layout_marginBottom="10dp"
				android:layout="@layout/viewmodel_announcement" />
			<ViewStub
				android:id="@+id/viewStubFriendRequest"
				android:inflatedId="@+id/stubViewFriendRequest"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="10dp"
				android:layout="@layout/viewmodel_request" />
			<ViewStub
				android:id="@+id/viewStubCommunitiesRequest"
				android:inflatedId="@+id/stubViewCommunitiesRequest"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="10dp"
				android:layout="@layout/viewmodel_request" />
			<View
				android:id="@+id/DividerView"
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="?attr/colorDivider"/>
			<com.google.android.material.tabs.TabLayout
				android:id="@+id/tab_home"
				android:layout_width="match_parent"
				android:layout_height="36dp"
				android:layout_gravity="start"
				android:layout_marginStart="0dp"
				android:gravity="start"
				android:clipToPadding="false"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="5dp"
				android:background="?attr/colorFill"
				app:layout_scrollFlags="scroll|enterAlways"
				app:tabBackground="@drawable/tab_indicator_un"
				app:tabGravity="center"
				app:tabIndicator="@drawable/tab_indicator_se"
				app:tabIndicatorColor="?attr/colorHint"
				app:tabIndicatorFullWidth="true"
				app:tabIndicatorHeight="36dp"
				app:tabMode="scrollable"
				app:tabPaddingStart="20dp"
				app:tabPaddingEnd="20dp"
				app:tabRippleColor="?attr/colorFill"
				app:tabSelectedTextColor="?attr/colorFill"
				app:tabTextAppearance="@style/TabFontAppearance"
				app:tabTextColor="?attr/colorHint">
				<com.google.android.material.tabs.TabItem
					android:id="@+id/tab_all"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/Lbl_All"/>
				<com.google.android.material.tabs.TabItem
					android:id="@+id/tab_lastActivities"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/Lbl_LastActivities"/>
				<com.google.android.material.tabs.TabItem
					android:id="@+id/tab_friendsBirthday"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/Lbl_FriendsBirthday"/>
			</com.google.android.material.tabs.TabLayout>
		</LinearLayout>
		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"> 
			<ViewStub
				android:id="@+id/viewStubShimmer"
				android:inflatedId="@+id/subViewShimmer"
				android:layout="@layout/ShimmerLoadPageLayout"
				android:layout_width="match_parent"
				android:layout_height="match_parent" />
			<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/recyler"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scrollbars="vertical" />
			<ViewStub
				android:id="@+id/viewStub"
				android:inflatedId="@+id/subView"
				android:layout_marginTop="35dp"
				android:layout_centerInParent="true"
				android:layout_gravity="center"
				android:gravity="center"
				android:layout="@layout/EmptyStateLayout"
				android:layout_width="match_parent"
				android:layout_height="400dp" /> 
		</FrameLayout>	 
	</LinearLayout>
	</androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>