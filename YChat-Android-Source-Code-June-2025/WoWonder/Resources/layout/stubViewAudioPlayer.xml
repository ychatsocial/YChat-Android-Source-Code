<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="60dp"
	android:id="@+id/viewStubFullScreenPlayer"
	android:background="?attr/colorFill"
	android:paddingHorizontal="10dp"
	android:gravity="center_vertical">
	<ImageView
		android:id="@+id/image_artist"
		android:layout_width="30dp"
		android:layout_height="30dp"
		android:focusable="false"
		android:clickable="false"
		android:layout_gravity="center_vertical"
		android:src="@drawable/imageplacholder"
		android:scaleType="centerCrop" />

	<TextView
		android:id="@+id/name_artist"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="5dp"
		android:layout_marginEnd="5dp"
		android:textSize="16dp"
		android:maxLength="25"
		android:lines="1"
		android:layout_gravity="center_vertical"
		android:text="Wael anjo"/>

	<View
		android:layout_width="0dp"
		android:layout_height="1dp"
		android:layout_weight="1"/>

	<ImageView
		android:id="@+id/play_button"
		android:layout_width="24dp"
		android:layout_height="24dp"
		android:scaleType="fitCenter"
		android:layout_gravity="center_vertical"
		android:layout_marginStart="5dp"
		android:layout_marginEnd="5dp"
		android:tag="Play"
		android:tint="@color/accent"
		android:src="@drawable/icon_play_vector" />

	<ImageView
		android:id="@+id/close_button"
		android:layout_width="20dp"
		android:layout_height="20dp"
		android:scaleType="fitCenter"
		android:layout_gravity="center_vertical"
		android:layout_marginStart="5dp"
		android:layout_marginEnd="5dp"
		android:padding="3dp"
		android:tag="Open"
		android:tint="?attr/colorHint"
		android:src="@drawable/icon_close_vector" />

</LinearLayout>