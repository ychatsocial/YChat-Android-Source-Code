<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:layout_margin="8dp"
	android:id="@+id/mainLayout"
	android:background="@drawable/round_gray_border">

	<ImageView
		android:id="@+id/image"
		android:layout_width="match_parent"
		android:layout_height="200dp"
		android:adjustViewBounds="true"
		android:scaleType="centerCrop"
		 />
	  
	<TextView
		android:id="@+id/fundTitle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Hirewell Weekly Audio Chat feat."
		android:textFontWeight="500"
		android:textSize="15sp"
		android:maxLines="2"
		android:layout_marginTop="8dp"
		android:layout_marginStart="8dp"
		android:layout_marginEnd="8dp"/>

	<TextView
		android:id="@+id/raised"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:ellipsize="none"
		android:maxLines="1"
		android:text="$1480 of $2000 Raised"
		android:layout_alignParentEnd="true"
		android:textSize="14dp" 	
		android:layout_marginStart="8dp"
		android:layout_marginEnd="8dp"/>
			 
	<ProgressBar
		android:id="@+id/progressBar"
		style="?android:attr/progressBarStyleHorizontal"
		android:layout_width="match_parent"
		android:layout_height="5dp"
		android:layout_marginBottom="7dp"
		android:layout_marginTop="7dp"
		android:progressDrawable="@drawable/gradient_progress"
		android:indeterminate="false"
		android:gravity="center"
		android:max="100"
		android:minHeight="50dp"
		android:minWidth="200dp"
		android:progress="95"
		android:layout_marginStart="8dp"
		android:layout_marginEnd="8dp"/>
			 
	<TextView
		android:id="@+id/TottalAmount"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Susta inability"
		android:textFontWeight="400"
		android:textSize="14sp"
		android:textColor="?attr/colorReact"
		android:lines="1"
		android:layout_marginStart="8dp"
		android:layout_marginEnd="8dp"/>
	 
	<androidx.appcompat.widget.AppCompatButton
		android:layout_width="match_parent"
		android:layout_height="42dp"
		android:id="@+id/DonateButton"
		android:textSize="16sp"
		android:layout_gravity="center" 
		android:background="@drawable/round_button_pressed"
		android:tag="false"
		android:paddingStart="17dp"
		android:paddingEnd="17dp"
		android:textAlignment="center"
		android:textAllCaps="false"
		android:text="@string/Lbl_Donate"
		android:forceDarkAllowed="false"
		android:textColor="@color/gnt_white"
		android:layout_margin="12dp"
		android:layout_marginStart="8dp"
		android:layout_marginEnd="8dp"/>

</LinearLayout>   
