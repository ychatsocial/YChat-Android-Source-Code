<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/bottomnavigationtab"
	android:layout_width="match_parent"
	android:layout_height="55dp"
	android:orientation="horizontal"
	android:layout_gravity="bottom"
	android:clipToPadding="true"
	android:layout_marginTop="3dp"
	android:background="?attr/colorFill"
	android:weightSum="5">
	<LinearLayout
		android:id="@+id/llHome"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:gravity="center"
		android:clickable="true"
		android:focusable="true"
		android:background="?attr/selectableItemBackground"
		android:orientation="vertical">
		<ImageView
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:padding="9dp"
			android:id="@+id/ivHome"
			android:tint="@color/accent"
			android:src="@drawable/icon_home_vector" />
		<View
			android:id="@+id/selectHome"
			android:layout_width="10dp"
			android:layout_height="5dp"
			android:visibility="visible"
			android:background="@drawable/tab_indicator" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/llNotification"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:gravity="center"
		android:clickable="true"
		android:focusable="true"
		android:background="?attr/selectableItemBackground"
		android:orientation="vertical">
		<ImageView
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:padding="9dp"
			android:id="@+id/ivNotification"
			android:tint="#9A9898"
			android:src="@drawable/icon_notification_vector" />
		<View
			android:id="@+id/selectNotification"
			android:layout_width="10dp"
			android:layout_height="5dp"
			android:visibility="gone"
			android:background="@drawable/tab_indicator" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/llReel"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:gravity="center"
		android:clickable="true"
		android:focusable="true"
		android:background="?attr/selectableItemBackground"
		android:orientation="vertical">
		<ImageView
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:padding="9dp"
			android:id="@+id/ivReel"
			android:tint="#9A9898"
			android:src="@drawable/icon_video_reels_vector" />
		<View
			android:id="@+id/selectReel"
			android:layout_width="10dp"
			android:layout_height="5dp"
			android:visibility="gone"
			android:background="@drawable/tab_indicator" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/llTrending"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:gravity="center"
		android:clickable="true"
		android:focusable="true"
		android:background="?attr/selectableItemBackground"
		android:orientation="vertical">
		<ImageView
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:padding="9dp"
			android:id="@+id/ivTrending"
			android:tint="#9A9898"
			android:src="@drawable/icon_fire_vector" />
		<View
			android:id="@+id/selectTrending"
			android:layout_width="10dp"
			android:layout_height="5dp"
			android:visibility="gone"
			android:background="@drawable/tab_indicator" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/llMore"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:gravity="center"
		android:clickable="true"
		android:focusable="true"
		android:background="?attr/selectableItemBackground"
		android:orientation="vertical">
		<ImageView
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:padding="9dp"
			android:id="@+id/ivMore"
			android:tint="#9A9898"
			android:src="@drawable/icon_settings_vector" />
		<View
			android:id="@+id/selectMore"
			android:layout_width="10dp"
			android:layout_height="5dp"
			android:visibility="gone"
			android:background="@drawable/tab_indicator" />
	</LinearLayout>
</LinearLayout> 