	<!--Pro Section -->
	<LinearLayout
		android:id="@+id/LayoutPro"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:paddingStart="5dp"
		android:gravity="center_vertical|start">
		<ImageView
			android:layout_width="35dp"
			android:layout_height="35dp"
			android:background="@drawable/shape_circle_white"
			android:backgroundTint="?attr/colorBubble"
			android:layout_centerInParent="true"
			android:padding="8dp"
			android:src="@drawable/icon_profile_tick_victor"
			android:tint="?attr/colorHint"/>
		<TextView
			android:id="@+id/ProText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="15dp"
			android:textSize="14sp"
			android:maxLines="1"/>
	</LinearLayout>
	<!--Website Section -->
	<LinearLayout
		android:id="@+id/LayoutWebsite"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="14dp"
		android:paddingStart="5dp"
		android:gravity="center_vertical|start">
		<ImageView
			android:layout_width="35dp"
			android:layout_height="35dp"
			android:background="@drawable/shape_circle_white"
			android:backgroundTint="?attr/colorBubble"
			android:layout_centerInParent="true"
			android:padding="8dp"
			android:src="@drawable/icon_post_global_vector"
			android:tint="?attr/colorHint"/>
		<TextView
			android:id="@+id/WebsiteText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="15dp"
			android:textSize="14sp"
			android:maxLines="1"/>
	</LinearLayout>
	<!--Gander Section -->
	<LinearLayout
		android:id="@+id/LayoutGander"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="14dp"
