<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:id="@+id/layout_signUp"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/bg_login"
	android:backgroundTint="@color/accent">
	<ImageView
		android:id="@+id/Logoplace"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="65dp"
		android:layout_marginBottom="20dp"
		android:src="@drawable/logo"
		android:scaleType="fitXY" />
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/rounded_dialog"
		android:scrollbars="vertical">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="20dp"
			android:orientation="vertical">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/Lbl_Register"
				android:layout_gravity="center_horizontal"
				android:gravity="center_horizontal"
				android:textSize="24sp"
				android:textStyle="bold"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/register_description"
				android:layout_gravity="center_horizontal"
				android:gravity="center_horizontal"
				android:layout_marginTop="10dp"
				android:textSize="14sp"
				android:textColor="?attr/colorReact"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/Lbl_Username"
				android:layout_marginTop="20dp"
				android:textSize="14sp" />

			<EditText
				android:id="@+id/UsernameEditText"
				android:layout_width="match_parent"
				android:layout_height="52dp"
				android:background="@drawable/EditTextStyleOne"
				style="@style/EditTextNormalStyle"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="5dp"
				android:hint="@string/Lbl_Username"
				android:textSize="14sp"
				android:inputType="text" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/Lbl_First_Name"
				android:layout_marginTop="20dp"
				android:textSize="14sp" />

			<EditText
				android:id="@+id/FirstNameEditText"
				android:layout_width="match_parent"
				android:layout_height="52dp"
				android:background="@drawable/EditTextStyleOne"
				style="@style/EditTextNormalStyle"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="5dp"
				android:hint="@string/Lbl_First_Name"
				android:textSize="14sp"
				android:inputType="text" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/Lbl_Last_Name"
				android:layout_marginTop="20dp"
				android:textSize="14sp" />

			<EditText
				android:id="@+id/LastNameEditText"
				android:layout_width="match_parent"
				android:layout_height="52dp"
				android:background="@drawable/EditTextStyleOne"
				style="@style/EditTextNormalStyle"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="5dp"
				android:hint="@string/Lbl_Last_Name"
				android:textSize="14sp"
				android:inputType="text" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/Lbl_Email"
				android:layout_marginTop="20dp"
				android:textSize="14sp" />

			<EditText
				android:id="@+id/EmailEditText"
				android:layout_width="match_parent"
				android:layout_height="52dp"
				android:background="@drawable/EditTextStyleOne"
				style="@style/EditTextNormalStyle"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="5dp"
				android:hint="@string/Lbl_YourEmail"
				android:textSize="14sp"
				android:inputType="textEmailAddress" />


			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/Lbl_Password"
				android:layout_marginTop="20dp"
				android:textSize="14sp" />

			<FrameLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp">

				<EditText
					android:id="@+id/PasswordEditText"
					android:layout_width="match_parent"
					android:layout_height="52dp"
					android:background="@drawable/EditTextStyleOne"
					style="@style/EditTextNormalStyle"
					android:layout_gravity="center_horizontal"
					android:hint="@string/Lbl_Password"
					android:paddingEnd="50dp"
					android:textSize="14sp"
					android:inputType="textPassword" />

				<ImageView
					android:id="@+id/imageShowPass"
					android:layout_width="16dp"
					android:layout_height="16dp"
					android:src="@drawable/icon_eyes_vector"
					android:tint="#808183"
					android:layout_marginEnd="20dp"
					android:layout_gravity="end|center" />

			</FrameLayout>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/Lbl_ConfirmPassword"
				android:layout_marginTop="20dp"
				android:textSize="14sp" />

			<FrameLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp">

				<EditText
					android:id="@+id/ConfirmPasswordEditText"
					android:layout_width="match_parent"
					android:layout_height="52dp"
					android:background="@drawable/EditTextStyleOne"
					style="@style/EditTextNormalStyle"
					android:layout_gravity="center_horizontal"
					android:hint="@string/Lbl_ConfirmPassword"
					android:paddingEnd="50dp"
					android:textSize="14sp"
					android:inputType="textPassword" />

				<ImageView
					android:id="@+id/imageShowConPass"
					android:layout_width="16dp"
					android:layout_height="16dp"
					android:src="@drawable/icon_eyes_vector"
					android:tint="#808183"
					android:layout_marginEnd="20dp"
					android:layout_gravity="end|center" />

			</FrameLayout>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/Lbl_Gender"
				android:layout_marginTop="20dp"
				android:textSize="14sp" />
			 
			<EditText
				android:id="@+id/GenderEditText"
				android:layout_width="match_parent"
				android:layout_height="52dp"
				android:background="@drawable/EditTextStyleOne"
				style="@style/EditTextNormalStyle"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="5dp"
				android:hint="@string/Lbl_Gender"
				android:textSize="14sp"
				android:inputType="text" />

			<LinearLayout
				android:id="@+id/BirthdayLayout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/Lbl_Birthday"
					android:layout_marginTop="20dp"
					android:textSize="14sp" />
			 
				<EditText
					android:id="@+id/BirthdayEditText"
					android:layout_width="match_parent"
					android:layout_height="52dp"
					android:background="@drawable/EditTextStyleOne"
					style="@style/EditTextNormalStyle"
					android:layout_gravity="center_horizontal"
					android:layout_marginTop="5dp"
					android:hint="@string/Lbl_Birthday"
					android:textSize="14sp"
					android:inputType="text" />

			</LinearLayout>
			  
			<LinearLayout
				android:id="@+id/PhoneNumLayout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:visibility="gone"
				android:orientation="vertical">
				
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/Lbl_Phone"
					android:layout_marginTop="20dp"
					android:textSize="14sp" />
			 
				<EditText
					android:id="@+id/PhoneNumEditText"
					android:layout_width="match_parent"
					android:layout_height="52dp"
					android:background="@drawable/EditTextStyleOne"
					style="@style/EditTextNormalStyle"
					android:layout_gravity="center_horizontal"
					android:layout_marginTop="5dp"
					android:hint="@string/Lbl_Phone"
					android:textSize="14sp"
					android:inputType="number" />

			</LinearLayout>
			  
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<CheckBox
					android:id="@+id/checkTermsOfService"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="start|center"
					android:gravity="start|center"
					android:text="@string/Lbl_I_agree_to_the"
					android:button="@drawable/shape_checkbox"
					android:textSize="14sp"
					android:paddingStart="8dp"/>
				  
				<TextView
					android:id="@+id/terms_of_service"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="start|center"
					android:text="@string/Terms_of_service"
					android:textColor="@color/accent"
					android:textSize="14sp"
					android:paddingStart="5dp"/>

			</LinearLayout>
			  
			<FrameLayout
				android:layout_width="match_parent"
				android:layout_margin="10dp" 
				android:layout_height="50dp">
				  
				<androidx.appcompat.widget.AppCompatButton
					android:layout_width="match_parent"
					android:layout_height="50dp"
					android:id="@+id/btnRegister"
					android:textSize="16sp"
					android:layout_gravity="center" 
					android:background="@drawable/round_button_pressed"
					android:tag="false"
					android:paddingStart="17dp"
					android:paddingEnd="17dp"
					android:textAlignment="center"
					android:textAllCaps="false"
					android:text="@string/Lbl_Register"
					android:forceDarkAllowed="false"
					android:textColor="@color/gnt_white" />

				<ProgressBar
					android:id="@+id/progressBar"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:indeterminateTint="@color/accent"
					android:visibility="gone" />

			</FrameLayout>
			 
			<include
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				layout="@layout/SocialLoginLayout"/>
			  
			<TextView
				android:id="@+id/layout_already_account"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginVertical="10dp"
				android:text="@string/already_account"
				android:textColor="?attr/colorReact"
				android:textSize="16sp" />
			 
			<View
				android:layout_height="?android:attr/actionBarSize"
				android:layout_width="match_parent" />
			 
		</LinearLayout>
	</ScrollView>
</LinearLayout> 