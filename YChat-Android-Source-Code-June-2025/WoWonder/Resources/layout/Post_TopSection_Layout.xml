<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:gravity="center_vertical">
    <ImageView
        android:contentDescription="avatar"
        android:id="@+id/userAvatar"
        android:scaleType="centerCrop"
        android:layout_width="42dp"
        android:layout_height="42dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
           <WoWonder.Helpers.Fonts.TextViewWithImages
                android:hyphenationFrequency="none"
                android:id="@+id/username"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:maxLines="2"
                android:textFontWeight="500"
                android:drawablePadding="5dp"
                android:lineSpacingExtra="1dp"
                android:layout_marginEnd="25dp"
                />
            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:id="@+id/moreicon"
                android:src="@drawable/icon_post_more_vector"
                android:layout_alignParentEnd="true"
                android:tag="false"
                android:tint="?attr/colorReact"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time_text"
                android:textSize="10sp"
				android:textFontWeight="500"
                android:maxLines="1"
                android:lines="1"
                android:tag="false"
                android:textColor="?attr/colorReact"/>
            <ImageView
                android:layout_marginTop="0dp"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginStart="8dp"
                android:id="@+id/privacyPost"
                android:src="@drawable/icon_post_global_vector"
                android:tag="false"
                android:tint="?attr/colorReact"
                android:visibility="visible"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout> 