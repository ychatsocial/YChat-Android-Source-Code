<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/rounded_dialog">

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:weightSum="4"
		android:padding="5dp">
		<!--Camera--> 
		<LinearLayout
			android:id="@+id/CameraLayout"
			android:orientation="vertical"
			android:layout_width="90dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:padding="10dp"
			android:gravity="center"
			android:layoutDirection="ltr"
			android:background="?attr/selectableItemBackground">
			<LinearLayout
				android:id="@+id/CameraContainer"
				android:orientation="vertical"
				android:layout_width="59dp"
				android:layout_height="59dp"
				android:background="@drawable/bg_item_round_ripple"
				android:backgroundTint="#F6795A"
				android:layout_gravity="center"
				android:gravity="center"> 
				<ImageView
					android:id="@+id/IconCamera" 
					android:layout_width="24dp"
					android:layout_height="24dp"
					android:tint="#F6795A"
					android:src="@drawable/icon_camera_vector"
					android:gravity="center"
					android:layout_gravity="center"
					android:layout_centerHorizontal="true"
					android:layout_centerVertical="true"/> 
			</LinearLayout>
			<TextView
				android:id="@+id/NameCamera"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginTop="7dp"
				android:textSize="14sp"
				android:text="@string/Lbl_Camera"
				android:gravity="center"
				android:layout_gravity="center"
				android:includeFontPadding="false" />
		</LinearLayout>

		<!--Gallery--> 
		<LinearLayout
			android:id="@+id/GalleryLayout"
			android:orientation="vertical"
			android:layout_width="90dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:padding="10dp"
			android:gravity="center"
			android:layoutDirection="ltr"
			android:background="?attr/selectableItemBackground">
			<LinearLayout
				android:id="@+id/GalleryContainer"
				android:orientation="vertical"
				android:layout_width="59dp"
				android:layout_height="59dp"
				android:background="@drawable/bg_item_round_ripple"
				android:backgroundTint="#8B4CFC"
				android:layout_gravity="center"
				android:gravity="center">
				<ImageView
					android:id="@+id/IconGallery" 
					android:layout_width="24dp"
					android:layout_height="24dp"
					android:tint="#8B4CFC"
					android:src="@drawable/icon_image_vector"
					android:gravity="center"
					android:layout_gravity="center"
					android:layout_centerHorizontal="true"
					android:layout_centerVertical="true"/>  
			</LinearLayout>
			<TextView
				android:id="@+id/NameGallery"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginTop="7dp"
				android:textSize="14sp"
				android:text="@string/Lbl_ImageAndVideo"
				android:gravity="center"
				android:layout_gravity="center"
				android:includeFontPadding="false" />
		</LinearLayout>
		
		<!--File-->
		<LinearLayout
			android:id="@+id/FileLayout"
			android:orientation="vertical"
			android:layout_width="90dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:padding="10dp"
			android:gravity="center"
			android:layoutDirection="ltr"
			android:background="?attr/selectableItemBackground">
			<LinearLayout
				android:id="@+id/FileContainer"
				android:orientation="vertical"
				android:layout_width="59dp"
				android:layout_height="59dp"
				android:background="@drawable/bg_item_round_ripple"
				android:backgroundTint="#EDB117"
				android:layout_gravity="center"
				android:gravity="center">
				<ImageView
					android:id="@+id/IconFile" 
					android:layout_width="24dp"
					android:layout_height="24dp"
					android:tint="#EDB117"
					android:src="@drawable/icon_file_vector"
					android:gravity="center"
					android:layout_gravity="center"
					android:layout_centerHorizontal="true"
					android:layout_centerVertical="true"/>  
			</LinearLayout>
			<TextView
				android:id="@+id/NameFile"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginTop="7dp"
				android:textSize="14sp"
				android:text="@string/Lbl_File"
				android:gravity="center"
				android:layout_gravity="center"
				android:includeFontPadding="false" />
		</LinearLayout>

		<!--Contact-->
		<LinearLayout
			android:id="@+id/ContactLayout"
			android:orientation="vertical"
			android:layout_width="90dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:padding="10dp"
			android:gravity="center"
			android:layoutDirection="ltr"
			android:background="?attr/selectableItemBackground">
			<LinearLayout
				android:id="@+id/ContactContainer"
				android:orientation="vertical"
				android:layout_width="59dp"
				android:layout_height="59dp"
				android:background="@drawable/bg_item_round_ripple"
				android:backgroundTint="#266EF1"
				android:layout_gravity="center"
				android:gravity="center">
				<ImageView
					android:id="@+id/IconContact" 
					android:layout_width="24dp"
					android:layout_height="24dp"
					android:tint="#266EF1"
					android:src="@drawable/icon_contact_vector"
					android:gravity="center"
					android:layout_gravity="center"
					android:layout_centerHorizontal="true"
					android:layout_centerVertical="true"/>   
			</LinearLayout>
			<TextView
				android:id="@+id/NameContact"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginTop="7dp"
				android:textSize="14sp"
				android:text="@string/Lbl_Contact"
				android:gravity="center"
				android:layout_gravity="center"
				android:includeFontPadding="false" />
		</LinearLayout>

	</LinearLayout>
	 
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:weightSum="4"
		android:padding="5dp">
		 
		<!--Gif-->
		<LinearLayout
			android:id="@+id/GifLayout"
			android:orientation="vertical"
			android:layout_width="90dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:padding="10dp"
			android:gravity="center"
			android:layoutDirection="ltr"
			android:background="?attr/selectableItemBackground">
			<LinearLayout
				android:id="@+id/GifContainer"
				android:orientation="vertical"
				android:layout_width="59dp"
				android:layout_height="59dp"
				android:background="@drawable/bg_item_round_ripple"
				android:backgroundTint="#53B175"
				android:layout_gravity="center"
				android:gravity="center">
				<ImageView
					android:id="@+id/IconGif" 
					android:layout_width="24dp"
					android:layout_height="24dp"
					android:tint="#53B175"
					android:src="@drawable/icon_gif_vector"
					android:gravity="center"
					android:layout_gravity="center"
					android:layout_centerHorizontal="true"
					android:layout_centerVertical="true"/>  
			</LinearLayout>
			<TextView
				android:id="@+id/NameGif"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginTop="7dp"
				android:textSize="14sp"
				android:text="@string/Lbl_Gif"
				android:gravity="center"
				android:layout_gravity="center"
				android:includeFontPadding="false" />
		</LinearLayout>
		
		<!--Stickers-->
		<LinearLayout
			android:id="@+id/StickersLayout"
			android:orientation="vertical"
			android:layout_width="90dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:padding="10dp"
			android:gravity="center"
			android:layoutDirection="ltr"
			android:background="?attr/selectableItemBackground">
			<LinearLayout
				android:id="@+id/StickersContainer"
				android:orientation="vertical"
				android:layout_width="59dp"
				android:layout_height="59dp"
				android:background="@drawable/bg_item_round_ripple"
				android:backgroundTint="#EA3568"
				android:layout_gravity="center"
				android:gravity="center">
				<ImageView
					android:id="@+id/IconStickers" 
					android:layout_width="24dp"
					android:layout_height="24dp"
					android:tint="#EA3568"
					android:src="@drawable/icon_stickers_vector"
					android:gravity="center"
					android:layout_gravity="center"
					android:layout_centerHorizontal="true"
					android:layout_centerVertical="true"/>  
			</LinearLayout>
			<TextView
				android:id="@+id/NameStickers"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginTop="7dp"
				android:textSize="14sp"
				android:text="@string/Lbl_Sticker"
				android:gravity="center"
				android:layout_gravity="center"
				android:includeFontPadding="false" />
		</LinearLayout>

		<!--Music-->
		<LinearLayout
			android:id="@+id/MusicLayout"
			android:orientation="vertical"
			android:layout_width="90dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:padding="10dp"
			android:gravity="center"
			android:layoutDirection="ltr"
			android:background="?attr/selectableItemBackground">
			<LinearLayout
				android:id="@+id/MusicContainer"
				android:orientation="vertical"
				android:layout_width="59dp"
				android:layout_height="59dp"
				android:background="@drawable/bg_item_round_ripple"
				android:backgroundTint="#00C39A"
				android:layout_gravity="center"
				android:gravity="center">
				<ImageView
					android:id="@+id/IconMusic" 
					android:layout_width="24dp"
					android:layout_height="24dp"
					android:tint="#00C39A"
					android:src="@drawable/icon_music_vector"
					android:gravity="center"
					android:layout_gravity="center"
					android:layout_centerHorizontal="true"
					android:layout_centerVertical="true"/>  
			</LinearLayout>
			<TextView
				android:id="@+id/NameMusic"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginTop="7dp"
				android:textSize="14sp"
				android:text="@string/Lbl_Music"
				android:gravity="center"
				android:layout_gravity="center"
				android:includeFontPadding="false" />
		</LinearLayout>

		<!--Location-->
		<LinearLayout
			android:id="@+id/LocationLayout"
			android:orientation="vertical"
			android:layout_width="90dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:padding="10dp"
			android:gravity="center"
			android:layoutDirection="ltr"
			android:background="?attr/selectableItemBackground">
			<LinearLayout
				android:id="@+id/LocationContainer"
				android:orientation="vertical"
				android:layout_width="59dp"
				android:layout_height="59dp"
				android:background="@drawable/bg_item_round_ripple"
				android:backgroundTint="#00AEEE"
				android:layout_gravity="center"
				android:gravity="center">
				<ImageView
					android:id="@+id/IconLocation" 
					android:layout_width="24dp"
					android:layout_height="24dp"
					android:tint="#00AEEE"
					android:src="@drawable/icon_location_vector"
					android:gravity="center"
					android:layout_gravity="center"
					android:layout_centerHorizontal="true"
					android:layout_centerVertical="true"/>  
			</LinearLayout>
			<TextView
				android:id="@+id/NameLocation"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginTop="7dp"
				android:textSize="14sp"
				android:text="@string/Lbl_Location"
				android:gravity="center"
				android:layout_gravity="center"
				android:includeFontPadding="false" />
		</LinearLayout>

	</LinearLayout>
	 
</LinearLayout>