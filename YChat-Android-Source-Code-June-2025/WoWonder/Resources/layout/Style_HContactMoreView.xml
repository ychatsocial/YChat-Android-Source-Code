<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:background="?attr/selectableItemBackground"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:gravity="center_vertical"
	android:padding="15dp" >
	<FrameLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<ImageView
			android:id="@+id/card_pro_pic"
			android:scaleType="centerCrop"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:focusable="false"
			android:clickable="false"
			android:src="@drawable/no_profile_image_circle"/>
		<de.hdodenhof.circleimageview.CircleImageView
			android:id="@+id/ImageLastseen"
			android:layout_width="15dp"
			android:layout_height="15dp"
			app:civ_border_width="2dp"
			app:civ_border_color="@color/gnt_white"
			android:layout_alignBottom="@+id/card_pro_pic"
			android:layout_gravity="end|bottom"
			android:gravity="center"
			android:visibility="gone"
			android:layout_above="@+id/card_pro_pic"
			android:src="@color/gnt_gray" /> 
	</FrameLayout>
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_weight="1"
		android:layout_height="wrap_content"
		android:layout_marginStart="15dp"
		android:orientation="vertical">
		<TextView
			android:id="@+id/card_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:lines="1"
			android:text="Adam Sandler" 
			android:maxWidth="220dp"
			android:drawablePadding="4dp"
			android:textFontWeight="500"
			android:textSize="16sp"
			android:textStyle="bold"
			android:clickable="false"
			android:focusable="false"/>
		<TextView
			android:id="@+id/card_dist"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:lines="1"
			android:textFontWeight="400"
			android:text="@string/Lbl_DefaultAbout"
			android:textColor="@color/text_color_in_between"
			android:textSize="12sp"
			android:focusable="false"
			android:clickable="false" />
	</LinearLayout>
	<ImageView 
		android:id="@+id/more"
		android:tint="?attr/colorHint"
		android:src="@drawable/icon_more_dots_vector"
		android:layout_gravity="top|center"
		android:gravity="top|center" 
		android:padding="5dp"
		android:layout_marginStart="10dp"
		android:layout_marginEnd="10dp"
		android:layout_width="24dp"
		android:layout_height="24dp" />
</LinearLayout>