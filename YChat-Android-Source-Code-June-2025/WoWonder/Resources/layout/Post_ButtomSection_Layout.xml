<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="55dp"
	android:orientation="vertical">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:layout_gravity="bottom"
		android:id="@+id/linerSecondReaction"
		android:orientation="horizontal"
		android:gravity="center_vertical"
		android:weightSum="3">
		<LinearLayout
			android:id="@+id/ReactLinearLayout"
			android:gravity="center"
			android:layout_height="match_parent"
			android:clickable="true"
			android:focusable="true"
			android:foreground="?attr/selectableItemBackground"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:orientation="horizontal">
			<WoWonder.Library.Anjo.ReactButton
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="left|center_vertical"
				android:layout_gravity="center_horizontal"
				android:id="@+id/ReactButton"
				android:textSize="14sp"
				android:textColor="?attr/colorReact"
				android:drawablePadding="8dp"
				android:drawableStart="@drawable/icon_post_like_vector"
				android:text="0" />
			<View
				android:layout_width="5dp"
				android:layout_height="wrap_content"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/SecondReactionLinearLayout"
			android:gravity="center"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:clickable="true"
			android:focusable="true"
			android:visibility="gone"
			android:foreground="?attr/selectableItemBackground"
			android:layout_width="0dp">
			<TextView
				android:id="@+id/SecondReactionText"
				android:layout_width="wrap_content"
				android:gravity="center"
				android:layout_gravity="center_horizontal"
				android:layout_height="match_parent"
				android:textSize="13sp"
				android:paddingStart="4dp"
				android:paddingEnd="4dp"
				android:focusable="false"
				android:textColor="?attr/colorReact"
				android:drawableTint="?attr/colorReact"
				android:drawablePadding="7dp"
				android:drawableStart="@drawable/icon_post_wonder_vector"
				android:text="@string/Btn_Wonder" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/CommentLinearLayout"
			android:gravity="center"
			android:layout_height="match_parent"
			android:clickable="true"
			android:focusable="true"
			android:foreground="?attr/selectableItemBackground"
			android:layout_width="0dp"
			android:orientation="horizontal"
			android:layout_weight="1">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center"
				android:layout_gravity="center"
				android:paddingStart="4dp"
				android:paddingEnd="4dp"
				android:id="@+id/CommentText"
				android:textSize="14sp"
				android:textColor="?attr/colorReact"
				android:drawableTint="?attr/colorReact"
				android:drawablePadding="8dp"
				android:drawableStart="@drawable/icon_post_comment_vector"
				android:text="@string/Lbl_Comment"
				android:lines="1"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/ShareLinearLayout"
			android:layout_height="match_parent"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:gravity="center"
			android:clickable="true"
			android:focusable="true"
			android:foreground="?attr/selectableItemBackground"
			android:orientation="horizontal">
			<TextView
				android:id="@+id/ShareText"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center"
				android:layout_gravity="center_horizontal"
				android:paddingStart="4dp"
				android:paddingEnd="4dp"
				android:textSize="14sp"
				android:drawableTint="?attr/colorReact"
				android:drawablePadding="8dp"
				android:drawableStart="@drawable/icon_post_share_vector"
				android:textColor="?attr/colorReact"
				android:text="@string/Lbl_Share"/>
		</LinearLayout>
	</LinearLayout>
	<View
		android:id="@+id/simpleViewAnimator"
		android:layout_width="match_parent"
		android:background="?attr/colorDivider"
		android:layout_height="10dp"/>
</LinearLayout>